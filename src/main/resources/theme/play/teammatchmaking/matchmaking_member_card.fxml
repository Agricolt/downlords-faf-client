<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="playerItemRoot" alignment="CENTER_LEFT" spacing="20" styleClass="card"
      xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.faforever.client.teammatchmaking.PartyMemberItemController">

    <children>
        <ImageView fx:id="userImageView" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true"
                   AnchorPane.leftAnchor="0"/>

        <VBox alignment="CENTER" spacing="15">
            <HBox spacing="10">
                <ImageView fx:id="countryImageView" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                           preserveRatio="true"/>
                <HBox>
                    <Label fx:id="clanLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           styleClass="chat-user-control-clan" text="[CLAN]"/>
                    <Label fx:id="usernameLabel" maxWidth="1.7976931348623157E308" minWidth="0.0"
                           text="&lt;Username&gt;"/>
                </HBox>
            </HBox>
            <ImageView fx:id="avatarImageView" fitHeight="20.0" fitWidth="40.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <padding>
                <Insets left="10"/>
            </padding>
        </VBox>

        <VBox alignment="CENTER" spacing="15">
            <Label fx:id="ratingLabel" text="%teammatchmaking.rating">
            </Label>
            <Label fx:id="gameCountLabel" text="%teammatchmaking.gameCount">
            </Label>
        </VBox>


        <HBox alignment="CENTER" spacing="5.0">
            <children>
                <ToggleButton fx:id="aeonButton" mnemonicParsing="false" onAction="#onFactionButtonClicked"
                              selected="true" text="">
                    <styleClass>
                        <String fx:value="icon-button"/>
                        <String fx:value="aeon"/>
                    </styleClass>
                </ToggleButton>
                <ToggleButton fx:id="cybranButton" mnemonicParsing="false" onAction="#onFactionButtonClicked"
                              selected="true" text="">
                    <styleClass>
                        <String fx:value="icon-button"/>
                        <String fx:value="cybran"/>
                    </styleClass>
                </ToggleButton>
                <ToggleButton fx:id="uefButton" mnemonicParsing="false" onAction="#onFactionButtonClicked"
                              selected="true" text="">
                    <styleClass>
                        <String fx:value="icon-button"/>
                        <String fx:value="uef"/>
                    </styleClass>
                </ToggleButton>
                <ToggleButton fx:id="seraphimButton" mnemonicParsing="false" onAction="#onFactionButtonClicked"
                              selected="true" text="">
                    <styleClass>
                        <String fx:value="icon-button"/>
                        <String fx:value="seraphim"/>
                    </styleClass>
                </ToggleButton>

                <Label fx:id="refreshingLabel" styleClass="icon" text="" visible="false"/>
            </children>
            <padding>
                <Insets left="30"/>
            </padding>
        </HBox>

        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
            <JFXButton fx:id="kickPlayerButton" onAction="#onKickPlayerButtonClicked"
                       text="%teammatchmaking.kickPlayer"/>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</HBox>
