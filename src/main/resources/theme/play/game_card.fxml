<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="gameCardRoot" hgap="10.0" onMouseClicked="#onClick" styleClass="card, game-card, pointable, hoverable"
          vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.faforever.client.game.GameTileController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" prefWidth="120.0"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="105.0" minWidth="105.0" prefWidth="105.0"/>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="105.0" minWidth="105.0" prefWidth="105.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints fillHeight="false" minHeight="-Infinity" vgrow="ALWAYS"/>
        <RowConstraints minHeight="-Infinity"/>
        <RowConstraints minHeight="-Infinity"/>
        <RowConstraints minHeight="-Infinity" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <AnchorPane GridPane.rowSpan="2147483647" GridPane.valignment="TOP">
            <children>
                <ImageView fx:id="mapImageView" fitHeight="120.0" fitWidth="120.0" preserveRatio="true"/>
                <Region fx:id="lockIconLabel" layoutX="10.0" layoutY="10.0" styleClass="lock-icon,icon" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
                <VBox alignment="BOTTOM_LEFT" styleClass="image-dimmer" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <children>
                        <Label fx:id="gameMapLabel" maxWidth="1.7976931348623157E308" minWidth="0.0" styleClass="card-subtitle" text="&lt;Game Map&gt;" />
                        <Label fx:id="gameTypeLabel" minWidth="0.0" styleClass="card-featured-mod"
                               text="&lt;Game Type&gt;"/>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
        <Label fx:id="gameTitleLabel" alignment="TOP_LEFT" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
               minWidth="0.0" prefWidth="220.0" styleClass="card-title"
               text="&lt;Very long game title to see if wrapping works&gt;" wrapText="true" GridPane.columnIndex="1"
               GridPane.columnSpan="2147483647" GridPane.halignment="LEFT" GridPane.rowIndex="0"
               GridPane.valignment="TOP">
            <padding>
                <Insets top="5.0"/>
            </padding>
        </Label>
          <Label fx:id="numberOfPlayersLabel" minWidth="0.0" styleClass="card-info" text="&lt;Number of Players&gt;" GridPane.columnIndex="1" GridPane.rowIndex="2">
              <graphic>
                  <Region styleClass="icon,players-icon" />
              </graphic>
          </Label>
          <Label fx:id="avgRatingLabel" minWidth="0.0" styleClass="card-info" text="&lt;Avg&gt;" GridPane.columnIndex="2" GridPane.rowIndex="2">
              <graphic>
                  <Region>
                      <styleClass>
                          <String fx:value="icon"/>
                          <String fx:value="statistics-icon"/>
                      </styleClass>
                  </Region>
              </graphic>
          </Label>
        <Label fx:id="hostLabel" maxHeight="1.7976931348623157E308" minWidth="0.0" styleClass="card-info"
               text="&lt;Host&gt;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <graphic>
                <Region styleClass="icon,host-icon"/>
            </graphic>
        </Label>
        <Label fx:id="modsLabel" maxWidth="1.7976931348623157E308" minWidth="0.0" styleClass="card-mod-list"
               text="&lt;Mods&gt;" wrapText="true" GridPane.columnIndex="1" GridPane.columnSpan="2147483647"
               GridPane.rowIndex="3" GridPane.valignment="TOP">
            <graphic>
                <Region styleClass="icon,mods-icon"/>
            </graphic>
        </Label>
    </children>
</GridPane>
