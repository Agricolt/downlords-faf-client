<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" minHeight="-Infinity" minWidth="-Infinity"
           xmlns="http://javafx.com/javafx/11.0.1"
           fx:controller="com.faforever.client.teammatchmaking.TeamMatchmakingController"
           fx:id="teamMatchmakingRoot">
    <VBox>
        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
            <children>

                <!-- LEFT COLUMN -->
                <VBox maxHeight="1.7976931348623157E308" minWidth="720" minHeight="-Infinity"
                      HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" spacing="10">
                    <VBox styleClass="card" VBox.vgrow="ALWAYS">
                        <children>
                            <Label styleClass="h2" text="Party"/>
                            <HBox spacing="10.0" alignment="CENTER">
                                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                                    <JFXButton fx:id="invitePlayerButton" defaultButton="true"
                                               text="%teammatchmaking.invitePlayer"
                                               onAction="#onInvitePlayerButtonClicked"/>
                                    <JFXButton fx:id="leavePartyButton" cancelButton="true" disable="true"
                                               layoutX="10.0" layoutY="10.0"
                                               text="%teammatchmaking.leaveParty"
                                               onAction="#onLeavePartyButtonClicked"/>
                                </HBox>

                                <Label fx:id="refreshingLabel" styleClass="icon" text="î˜§" visible="false"/>

                                <JFXButton fx:id="readyButton" text="%teammatchmaking.notReady"
                                           onAction="#onReadyButtonClicked" styleClass="party-ready-button-not-ready"/>
                            </HBox>
                            <JFXListView fx:id="playerListView" focusTraversable="false"
                                         styleClass="party-player-list-view"
                                         VBox.vgrow="ALWAYS"/>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </VBox>

                    <!-- BOTTOM LEFT card -->
                    <VBox styleClass="card" minHeight="250">
                        <children>
                            <Label styleClass="h2" text="%teammatchmaking.statistics"/>

                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </VBox>
                </VBox>

                <!-- RIGHT COLUMN -->
                <VBox maxHeight="1.7976931348623157E308" minWidth="350.0" prefWidth="350.0" spacing="10"
                      HBox.hgrow="ALWAYS">

                    <!-- QUEUE CARD -->
                    <VBox maxHeight="300.0" minHeight="300.0" styleClass="card">
                        <children>
                            <Label styleClass="h2" text="%teammatchmaking.availableQueues"/>
                            <HBox spacing="10.0">
                                <children>
                                    <JFXButton cancelButton="true" disable="true" text="%teammatchmaking.leaveQueue"
                                               onAction="#onLeaveQueueButtonClicked"/>
                                </children>
                            </HBox>
                            <JFXListView VBox.vgrow="ALWAYS"/>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </VBox>

                    <!-- BOTTOM RIGHT CARD -->
                    <VBox maxHeight="1.7976931348623157E308" styleClass="card" VBox.vgrow="ALWAYS">
                        <children>
                            <Label styleClass="h2" text="%teammatchmaking.chat"/>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </VBox>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </VBox>
</StackPane>
